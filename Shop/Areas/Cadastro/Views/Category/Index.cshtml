@model IEnumerable<Models.Category>

 
<div class="card container" style="width: 100%;">
    <div class="card-header controlColor">
        <div class="row">
            <div class="col-6">
                <h2>List Category</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-lg btn-primary mt-2"><i class="fas fa-plus"></i> &nbsp; Create</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="control-section">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Display Order
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="controlColor">
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td width="50%">@obj.Name</td>
                                <td width="30%">@obj.DisplayOrder</td>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-area="Cadastro" asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="Cadastro" asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="card-footer controlColor">
        Total de Registro :  @Model.Count()
    </div>
</div>

