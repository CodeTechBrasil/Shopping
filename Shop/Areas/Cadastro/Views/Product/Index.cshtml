@model IEnumerable<Models.Product>

<div class="card container" style="width: 100%;">
    <div class="card-header controlColor">
        <div class="row">
            <div class="col-6">
                <h2>List Product</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-lg btn-primary mt-2">
                <i class="fas fa-plus"></i> &nbsp; Create New Product</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="control-section">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Application Type
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td width="30%">@obj.Name</td>
                                <td width="10%">@obj.Price</td>
                                <td width="20%">@obj.Category.Name</td>
                                <td width="20%">@obj.ApplicationType.Name</td>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-route-Id="@obj.Id" asp-area="Cadastro" asp-action="Upsert" class="btn btn-primary mx-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-route-Id="@obj.Id" asp-area="Cadastro" asp-action="Delete" class="btn btn-danger mx-2">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="card-footer controlColor">
        Total de Registro :  @Model.Count()
    </div>
</div>
