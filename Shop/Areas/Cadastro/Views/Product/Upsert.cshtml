@model Models.ProductVM
@using Common
@{
    var title = "Create Product";
}

<form method="post" asp-area="Cadastro" asp-controller="Product" asp-action="Upsert" enctype="multipart/form-data">
    <div class="card container  ">
        <div class="card-header controlColor mt-3">

            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Product.Id != 0)
                {
                    title = "Edit Product";
                    <input asp-for="Product.Id" hidden />
                }
                <div class="form-group row">
                    <h2 class="text-white pl-3">@title</h2>
                </div>
                <br />
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-8">
                    <div class="border p-3 bg-white">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-12">
                                        <label asp-for="Product.Name"></label>
                                        <input asp-for="Product.Name" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-12">
                                        <label asp-for="Product.Price"></label>
                                        <input asp-for="Product.Price" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-12">
                                        <label asp-for="Product.ShortDesc"></label>
                                        <input asp-for="Product.ShortDesc" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-12">
                                        <label asp-for="Product.Description"></label>
                                        <input asp-for="Product.Description" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-6">
                                        <label asp-for="Product.CategoryId"></label>
                                        <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-select">
                                            <option disabled selected>--Select Category--</option>
                                        </select>
                                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                    </div>
                                    <div class="col-6">
                                        <label asp-for="Product.ApplicationTypeId"></label>
                                        <select asp-for="Product.ApplicationTypeId" asp-items="@Model.ApplicationTypeSelectList" class="form-select">
                                            <option disabled selected>--Select Application Type--</option>
                                        </select>
                                        <span asp-validation-for="Product.ApplicationTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row py-2">
                                    <div class="col-12">
                                        Image
                                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group row py-2">
                                <div class="col-12">
                                    @if (Model.Product.Id != 0)
                                    {
                                        //Edit button and back to list
                                        <partial name="_EditAndBackToListButton" model="Model.Product.Id" />
                                    }
                                    else
                                    {
                                        //Create button and back to list
                                        <partial name="_CreateAndBackToListButton" />
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Product.Id != 0)
                            {
                                <img src="@WC.IMAGE_PATH@Model.Product.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                    'Error!',
                    'Please upload an Image!',
                    'error'
                )
                return false;
            }
            return true;
        }
    </script>
}